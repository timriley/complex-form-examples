<div class="fields">
  <div class="field">
    <%= f.label :owner %>
    <%= f.text_field :owner %>
    <%= remove_child_link "remove", f %>
  </div>
  <div class="children_fields">
    <%= f.fields_for :steps do |step_form| %>
        <%= render 'step', :f => step_form %>
    <% end %>
    <p><%= add_child_link "New Step", :steps %></p>
    <%= new_child_fields_template(f, :steps)%>
  </div>
</div>