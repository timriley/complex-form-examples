<%#Add the display none if the object is set to be destroyed so it doesn't reappear during error message pages%>
<div class="fields" style="<%="display:none" if f.object._destroy%>">
  <div class="field">
    <%=f.label :name, "Task"%>
    <%=f.text_field :name%>
    <%= remove_child_link("remove", f)%>
  </div>
  <div class="children_fields">
    <%= f.fields_for :assignments do |assignment_form| %>
      <%=render 'assignment', :f => assignment_form%>
    <%end%>
    <p><%= add_child_link "New Assignment", :assignments %></p>
    <%= new_child_fields_template(f, :assignments)%>
  </div>
</div>